<?xml version="1.0" encoding="utf-8"?>
<resources>
        <!--
            Base application theme, dependent on API level. This theme is replaced
            by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
        -->
        <style name="WeiboBaseTheme" parent="@style/Theme.AppCompat.NoActionBar"></style>

        <!-- Application theme. -->

        <style name="appTheme" parent="WeiboBaseTheme">
            <!-- All customizations that are NOT specific to a particular API-level can go here. -->
            <item name="themeColor">@color/orange</item>
            <item name="themeStatusbarColor">@color/orange_dark</item>
            <item name="colorPrimary">?attr/themeColor</item>
            <item name="colorAccent">?attr/themeColor</item>
            <item name="colorPrimaryDark">?attr/themeColor</item>
            <item name="android:overScrollMode">never</item>
        </style>
</resources>