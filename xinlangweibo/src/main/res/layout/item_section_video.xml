<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_tiny_margin"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.jy.xinlangweibo.widget.RectangleImageView
                android:id="@+id/item_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/item_play"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/default_general_margin"
                android:background="@drawable/shadow_normal_reserve"
                android:gravity="center_vertical|bottom"
                android:padding="@dimen/default_tiny_padding"
                android:textColor="@color/white"
                android:textSize="@dimen/default_tiny_text_size" />

        </FrameLayout>


    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="@dimen/default_tiny_padding"
        tools:text="123"
        style="@style/bigtitle_black_text"
        />

    <TextView
        android:id="@+id/item_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingEnd="@dimen/default_tiny_padding"
        android:paddingStart="@dimen/default_tiny_padding"
        tools:text="123"
        style="@style/middle_light_gray_text"
        />

</LinearLayout>

