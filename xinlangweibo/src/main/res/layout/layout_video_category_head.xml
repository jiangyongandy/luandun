<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="@color/bg_agray"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lianzai" />

        <TextView
            android:id="@+id/tv_video_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="专题"
            android:textColor="@color/font_normal"
            android:textSize="@dimen/default_small_text_size" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_all_serial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/ic_gray_arrow_right"
        android:drawableEnd="@drawable/ic_gray_arrow_right"
        android:drawablePadding="@dimen/default_tiny_margin"
        android:padding="@dimen/default_general_margin"
        android:text="更多"
        android:textColor="@color/black_alpha_30"
        android:textSize="@dimen/default_tiny_text_size" />


</RelativeLayout>

