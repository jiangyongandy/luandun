<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_height="140dp"
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享到"
                android:layout_marginTop="23dp" style="@style/middle_balck_text"
                android:layout_centerHorizontal="true"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="80dp"
                >

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mRlWechat"
                    android:layout_weight="1" android:visibility="gone"
                    >

                <ImageView
                        android:id="@+id/share_wx"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/share_wechat"
                        />

                <TextView
                        android:gravity="center" style="@style/middle_balck_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="17dp"
                        android:text="微信"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mRlWeixinCircle"
                    android:layout_weight="1" android:visibility="gone"
                    >

                <ImageView
                        android:id="@+id/share_wx_timeline"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/share_moment"
                        />

                <TextView
                        android:gravity="center" style="@style/middle_balck_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="17dp"
                        android:text="朋友圈"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mRlWeibo"
                    android:layout_weight="1"
                    >

                <ImageView
                        android:id="@+id/share_weibo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/share_weibo"
                        />

                <TextView
                        android:gravity="center" style="@style/middle_balck_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="17dp"
                        android:text="微博"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mRlQQ"
                    android:layout_weight="1"
                    >

                <ImageView
                        android:id="@+id/share_qq"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/share_qq"
                        />

                <TextView
                        android:gravity="center" style="@style/middle_balck_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="17dp"
                        android:text="QQ"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/mRlQzone"
                    android:layout_weight="1" android:visibility="gone"
                    >

                <ImageView
                        android:id="@+id/share_qzone"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/share_qzone"
                        />

                <TextView
                        android:gravity="center" style="@style/middle_balck_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="17dp"
                        android:text="QQ空间"
                        />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
