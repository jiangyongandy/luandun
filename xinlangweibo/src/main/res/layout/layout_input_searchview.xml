<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="@color/bg_gray"
    android:layout_height="wrap_content" android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/card_search"
        android:layout_width="0dp" android:layout_weight="1"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:padding="4dp">

        <com.jy.xinlangweibo.widget.emotionkeyboard.EmoticonsEditText
            android:id="@+id/et_search" android:hint="好想搜点什么..." android:textColorHint="@color/txt_light_gray"
            android:layout_width="match_parent" android:imeOptions="actionSearch"  android:singleLine="true"
            android:background="@null"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/userinfo_tabicon_search_highlighted"
            android:backgroundTint="@color/font_normal"
            android:scaleType="fitCenter" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_cancel"  android:gravity="center" android:layout_margin="2dp"
        android:layout_width="wrap_content" android:text="取消" style="@style/bigtitle_blue_text"
        android:layout_height="match_parent" />
</LinearLayout>
