<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_message_layout"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar_default" />

        <TextView
            android:id="@+id/tv_pubname"
            style="@style/middle_gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_head"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/iv_head"
            android:text="路人"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/tv_from"
            style="@style/small_gray_text"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_alignLeft="@+id/tv_pubname"
            android:layout_below="@+id/tv_pubname"
            android:text="路人乙向你打招呼了！路人乙向你打招呼了！路人乙向你打招呼了！"
            android:clickable="false"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="17"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray" />

</LinearLayout>